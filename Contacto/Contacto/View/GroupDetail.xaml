                              />

                    </Canvas>


                </StackPanel>

            </StackPanel>

        </Grid>


        <Pivot x:Name="ContentArea" Grid.Row="1" SelectionChanged="ContentArea_SelectionChanged" >
            <PivotItem x:Name="GroupDetails">
                <Grid x:Name="toAddGrid"  Grid.Row="1">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Group:" FontSize="30" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding myGroupName}" FontSize="30" FontWeight="Bold" Margin="0,0,5,0"/>
                        </StackPanel>
                        <ListView x:Name ="listofContacts" 
                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Height="439" 
                             RenderTransformOrigin="0.5,0.5" Width="360" DataContext="{Binding myGroup.contactList, ElementName=page}" >

                            <ListView.ItemTemplate >
                                    <DataTemplate>
                                    <Border BorderBrush="#363951"  BorderThickness="0, 1, 0, 1">
                                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                        VerticalAlignment="Bottom"  Width="360" Margin="0,0,0,0"  DoubleTapped="StackPanel_DoubleTapped" Tapped="StackPanel_Tapped" >
                                         
                                            <FlyoutBase.AttachedFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Delete Contact" Click="MenuFlyoutItem_Click"/>
                                                </MenuFlyout>
                                            </FlyoutBase.AttachedFlyout>

                                            <TextBlock Text="{Binding mufirstName, UpdateSourceTrigger=PropertyChanged}" FontSize="24" FontWeight="SemiBold" 
        			                    Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
        			                    TextTrimming="WordEllipsis" TextWrapping="Wrap"/>

                                        <TextBlock Text="{Binding mulastName, UpdateSourceTrigger=PropertyChanged}"
                                          FontSize="24" FontWeight="SemiBold" 
        			                    Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
        			                    TextTrimming="WordEllipsis" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem x:Name="SMS">
                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Send a text to " Margin="0,0,5,20" FontWeight="Bold" FontSize="24" />
                        <TextBlock Text="{Binding myGroupName}" FontSize="24" FontWeight="Bold" />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">

                        <TextBlock Text="Contact Number: " VerticalAlignment="Center"  FontSize="24" FontWeight="SemiBold" Margin="0, 10, 10 , 10"/>
                        <Button x:Name="fieldSelector" DataContext="{Binding RelativeSource={RelativeSource Self}}">

                            <Button.Flyout>
                                <ListPickerFlyout x:Name="FieldList"  ItemsPicked="ListPickerFlyout_ItemsPicked" />
                            </Button.Flyout>

                        </Button>

                    </StackPanel>

                    <TextBox x:Name="smsBody" PlaceholderText="Enter body..." TextWrapping="Wrap"  Height="235" Margin="0,0,-0.333,0"/>

                    <Button Content="Send SMS" Click="SMSClick"  HorizontalAlignment="Center"/>

                </StackPanel>

            </PivotItem>

            <PivotItem x:Name="Email">
                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Send an Email to " Margin="0,0,5,20" FontWeight="Bold" FontSize="24" />
                        <TextBlock Text="{Binding mufirstName}" FontSize="24" FontWeight="Bold" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">

                        <TextBlock Text="Email Address: " VerticalAlignment="Center"  FontSize="24" FontWeight="SemiBold" Margin="0, 10, 10 , 10"/>
                        <Button x:Name="fieldSelector2" DataContext="{Binding RelativeSource={RelativeSource Self}}">

                            <Button.Flyout>
                                <ListPickerFlyout x:Name="FieldList2"  ItemsPicked="ListPickerFlyout_ItemsPicked" />
                            </Button.Flyout>

                        </Button>

                    </StackPanel>


                    <TextBox x:Name="emailSubject" PlaceholderText="Enter subject.." TextWrapping="Wrap"/>
                    <TextBox x:Name="emailBody" PlaceholderText="Enter body..." TextWrapping="Wrap"  Height="235" Margin="0,0,-0.333,0"/>

                    <!--<Button Content="Calendar" Click="Calendar_Click" HorizontalAlignment="Center" />-->
                    <!--<Button Content="Email" Click="EmailClick" HorizontalAlignment="Center" />-->


                    <Button Content="Send Email" Click="EmailClick"  HorizontalAlignment="Center"/>

                </StackPanel>

            </PivotItem>


        </Pivot>

    </Grid>
</Page>
