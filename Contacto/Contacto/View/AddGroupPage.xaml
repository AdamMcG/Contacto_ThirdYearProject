<Page
    x:Class="Contacto.View.AddGroupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Contacto.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Compact">
            <AppBarButton x:Name="FinishBtn" Icon="Accept" Label="Add Contact" Click="FinishBtn_Click"/>
            <AppBarButton x:Name="CancelBtn" Icon="Cancel" Label="Cancel" Click="CancelBtn_Click"></AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>



    <Grid Background="#0C0B15">
        <Grid.RowDefinitions>
            <RowDefinition  Height="0.5*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid Background="#363951" Margin="0,0,0,2">
            <TextBlock Text="Create A Group" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" FontWeight="SemiBold"/>
        </Grid>


        <ListView x:Name="Grouplist"
                  Background="Tomato"
                  HorizontalAlignment="Stretch"
                  Height="307"
                  Margin="10,206.5,10,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"/>


        <StackPanel HorizontalAlignment="Left" Height="71" Margin="10,10.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="380" Orientation="Horizontal">

            <TextBlock Text=" Group Name" Width="160" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
            <TextBox x:Name="groupNameTextBox" Width="200" PlaceholderText="enter Name" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBox>

        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="120" Margin="10,81.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="380" Orientation="Vertical">

            <TextBlock Text="  Group Description" Width="300" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
            <TextBox x:Name = "groupDescription"  Width="360" PlaceholderText="Enter Description" HorizontalAlignment="Center" VerticalAlignment="Center" Height="83" Margin="10,0" />

        </StackPanel>



    </Grid>
</Page>
