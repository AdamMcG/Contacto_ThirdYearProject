<Page
    x:Class="Contacto.AddContactPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Contacto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal">
            <AppBarButton x:Name ="Back"  Icon="Back" Label="Back" Click="AppBarButton_Click"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="#0C0B15">
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="399*" />
            <RowDefinition Height="143*"/>

        </Grid.RowDefinitions>
        <RichTextBlock Margin="0,0,0,8.333">
            <Paragraph FontSize="45">
                <Run Text="Adding a Contact"/>

            </Paragraph>
        </RichTextBlock>

        <ScrollViewer HorizontalAlignment="Left" Height="287" Margin="30,20.667,0,0" Grid.Row="1" VerticalAlignment="Top" Width="360" RenderTransformOrigin="0.5,0.5"/> 
        
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Left" Height="65" 
                    Margin="30,20.667,0,0" Grid.Row="1" 
                    VerticalAlignment="top" Width="360">
            <TextBlock FontSize="20" RenderTransformOrigin="0.142,2.869" >
        		<Run Text="First"/>
        		<Run Text=" "/>
        		<Run Text="Name:"/>
            </TextBlock>
            <TextBox TextWrapping="Wrap" Text="Field 1"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" 
        	HorizontalAlignment="Left" Height="65" 
        	Margin="30,100.667,0,0" Grid.Row="1" 
        	VerticalAlignment="top" Width="360">
            <TextBlock FontSize="20" RenderTransformOrigin="0.142,2.869">
        		<Run Text="Last"/>
        		<Run Text=" "/>
        		<Run Text="Name:"/>
            </TextBlock>
            <TextBox TextWrapping="Wrap" Text="Field 2"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" 
        	HorizontalAlignment="Left" Height="65" 
        	Margin="30,179.667,0,0" Grid.Row="1" 
        	VerticalAlignment="top" Width="360">
            <TextBlock FontSize="20" RenderTransformOrigin="0.142,2.869">
        		<Run Text="Phone"/>
        		<Run Text=" "/>
        		<Run Text="Number:"/>
            </TextBlock>
            <TextBox TextWrapping="Wrap" Text="Field 3"/>
        </StackPanel>

        <Button Content="Remove field" HorizontalAlignment="Left" Margin="198,-4.5,0,0" Grid.Row="2" VerticalAlignment="Top" Height="58" Width="133"/>
        <Button x:Name="Add_field_button" Content="Add field" HorizontalAlignment="Left" Margin="35,-4.5,0,0" Grid.Row="2" VerticalAlignment="Top" Height="58" Width="133" RenderTransformOrigin="0.374,0.175" Click="AddField"/>
        <TextBlock x:Name="sampleData" HorizontalAlignment="Left" Margin="30,32.5,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="110"/>
    </Grid>
</Page>
